<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ProgressDialogStyle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="updateProgressbarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress</item>
        <item name="android:minHeight">15dp</item>
    </style>


    <!-- 定义一些样式 -->
    <style name="huiLineAttr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/hui_color</item>
    </style>

    <style name="whiteLineAttr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="listviewAttr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:divider">@color/hui_color</item>
    </style>

    <style name="blackTextBase">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSize">@dimen/font_size_smaller</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="blackTextBaseWrap">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="blueTextBaseWrap">
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/blue_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="themeTextBase">
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/theme_color</item>
    </style>

    <style name="themeTextBaseWrap">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="whiteTextBase">
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="whiteTextBaseWrap">
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="redTextBaseWrap">
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="orangeTextBaseWrap">
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/orange_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="huiTextBase">
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/hui_text_color</item>
    </style>

    <style name="huiTextBaseWrap">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/hui_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="grayTextBaseWrap">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textColor">@color/gray_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="progressAttr">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:id">@android:id/progress</item>
    </style>

    <style name="emptyAttr">
        <item name="android:id">@android:id/empty</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/hui_text_color</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="buttonThemeAttr">
        <item name="android:id">@android:id/button1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/button_theme</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>

    <style name="buttonOrangeAttr">
        <item name="android:id">@android:id/button1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button_orange</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_big</item>
    </style>

    <style name="buttonWhiteAttr">
        <item name="android:id">@android:id/button1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button_white</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:textSize">@dimen/font_size_big</item>
    </style>

    <!-- 首页底部导航样式  -->
    <style name="bottomBarTextViewAttr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">@dimen/font_size_smaller</item>
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="loginEdittextAttr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:background">@null</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <style name="goodsTypeLayoutAttr">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/textview_white</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/theme_color</item>
    </style>

    <style name="emptyHint">
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:id">@android:id/empty</item>
    </style>

    <style name="createAddressLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="createAddressEdittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/hui_text_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>




    <style name="style_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimAmount">0.7</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="dialogdialog" parent="style_dialog">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="dialoganimationstyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>

        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="progressDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>



    <style name="style_dialog1" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/BottomToTopAnim</item>
    </style>

    <style name="BottomToTopAnim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="@android:windowExitAnimation">@anim/bottom_out</item>
    </style>
</resources>
